<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.todociber.hesidohackeado">



    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />


    <application
        android:name="AnalyticsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Hackeado?"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListadoResultados"
            android:label="@string/title_activity_listado_resultados"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DetalleResultado"
            android:label="@string/title_activity_detalle_resultado"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".informacionApp"
            android:label="@string/title_activity_informacion_app"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>